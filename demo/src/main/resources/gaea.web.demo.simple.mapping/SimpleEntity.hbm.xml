<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gaea.web.demo.simple">
    <class name="SimpleEntity" table="simpleentity" lazy="false" dynamic-insert="true" dynamic-update="true">
        <id name="id" column="id" type="long" unsaved-value="null">
            <generator class="identity"/>
        </id>

        <property name="name" column="name" type="string" not-null="true"/>
        <property name="birthday" column="birthday" type="java.util.Date" not-null="false"/>
        <property name="age" column="age" type="integer" not-null="true"/>
        <property name="remark" column="remark" type="string" not-null="true"/>


        <property name="status" column="status" type="integer" not-null="true"/>
        <property name="insertUser" column="insert_user" type="string" not-null="false"/>
        <property name="insertDate" generated="insert">
            <column name="insert_date" sql-type="datetime" not-null="false" default="CURRENT_TIMESTAMP"></column>
        </property>

        <property name="updateUser" column="update_user" type="string" not-null="false"/>
        <property name="updateDate" generated="always">
            <column name="update_date" sql-type="datetime" not-null="false" default="CURRENT_TIMESTAMP"></column>
        </property>
    </class>
</hibernate-mapping>
